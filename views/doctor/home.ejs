<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Doktor Anasayfa</title>
    <style>
        body {
            /* display: flex; */
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to right, #f0f0f0, #b5fcd8);
        }
        
    </style>
</head>
<body>
    <%- include('../partials/doctor/begining-header') %>
    <div class="container" style="margin-top: 80px;">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3>Bildirim Listesi</h3>
            </div>
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>İçerik</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bildirimler.forEach(bildirim => { %>
                            <tr>
                                <td>
                                    <%= bildirim.icerik %>
                                </td>
                                <td>
                                    <%= bildirim.date %>
                                </td>
                                
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
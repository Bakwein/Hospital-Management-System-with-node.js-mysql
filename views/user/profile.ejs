<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Hasta Profili</title>
    
    
</head>
<body>
    <%- include('../partials/user/begining-header') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3>Hasta Profili</h3>
            </div>
            <div class="col-md-12 mt-3">
                <form method="post">
                    <div class="row mb-3">
                        <label for="id" class="col-sm-2 col-from-label">Id</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="id" name="id" readonly value="<%= id %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="tcno" class="col-sm-2 col-from-label">Tc Kimlik No:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="tcno" name="tcno" readonly value="<%= tcno %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="isim" class="col-sm-2 col-from-label">İsim:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="isim" name="isim" readonly value="<%= isim %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="soyisim" class="col-sm-2 col-from-label">Soyisim:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="soyisim" name="soyisim" readonly value="<%= soyisim %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="dogumTarihi" class="col-sm-2 col-from-label">Doğum Tarihi:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="dogumTarihi" name="dogumTarihi" readonly value="<%= dogumTarihi.getDate() %> - <%= dogumTarihi.getMonth()+1 %> - <%= dogumTarihi.getFullYear() %>  ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="cinsiyet" class="col-sm-2 col-from-label">Cinsiyet:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="cinsiyet" name="cinsiyet" readonly value="<%= cinsiyet %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="telefon" class="col-sm-2 col-from-label">Telefon:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="telefon" name="telefon" readonly value="<%= telefon %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="sehir" class="col-sm-2 col-from-label">Şehir:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="sehir" name="sehir" readonly value="<%= sehir %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="ilce" class="col-sm-2 col-from-label">İlçe:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="ilce" name="ilce" readonly value="<%= ilce %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="mahalle" class="col-sm-2 col-from-label">Mahalle:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="mahalle" name="mahalle" readonly value="<%= mahalle %>">
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <a href="/user/profile_update_render" class="btn btn-primary">Güncelleme Mi Yapmak İstiyorsun?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</body>
</html>
